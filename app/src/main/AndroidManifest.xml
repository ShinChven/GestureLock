<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.atlassc.gesturelocker.app" >

    <application
        android:name="net.atlassc.gesturelocker.app.ApplicationExtend"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.atlassc.gesturelocker.app.activity.LockActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="net.atlassc.gesturelocker.app.activity.SetupPatternActivity"
            android:label="@string/title_activity_setup_pattern"
            android:parentActivityName="net.atlassc.gesturelocker.app.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity android:name="net.atlassc.gesturelocker.app.activity.MainActivity"

                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.atlassc.gesturelocker.app.activity.DemoActivity"
            android:label="@string/title_activity_demo"
            android:parentActivityName="net.atlassc.gesturelocker.app.activity.MainActivity"
           >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="MainActivity" />
        </activity>
    </application>

</manifest>
